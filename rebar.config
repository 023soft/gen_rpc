%%% Require OTP 17.0 at a bare minimum
{require_min_otp_vsn, "17"}.

{erl_opts, [{warn_format, 1},
    bin_opt_info,
    inline_list_funcs,
    debug_info,
    warnings_as_errors,
    report_warnings,
    stong_validation,
    % warn_missing_spec, % Only enable it if the project is complete, spec-wise
    warn_untyped_record,
    warn_export_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_obsolete_guard,
    warn_unused_import,
    warn_deprecated_function,
    warn_unused_vars,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_exported_vars]}.

{deps, []}.
